<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_dialog_boder"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_dialog"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_warning" />
        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/tv_content_log2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bạn muốn hủy đăng ký phòng chứ?"
            android:textColor="#FF0000" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_Dialog_Cancel"
                android:layout_width="118dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_btn_accept"
                android:text="Hủy"
                android:textAllCaps="false" />
            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/btn_Dialog_Accept"
                android:layout_width="118dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_button_failed_login"
                android:text="Đồng ý"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>